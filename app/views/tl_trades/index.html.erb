<h1>Listing tl_trades</h1>

<table>
  <thead>
    <tr>
      <th>Phone</th>
      <th>Card</th>
      <th>Price</th>
      <th>Trade time</th>
      <th>Pos ind</th>
      <th>Shop ind</th>
      <th>Trade ind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tl_trades.each do |tl_trade| %>
      <tr>
        <td><%= tl_trade.phone %></td>
        <td><%= tl_trade.card %></td>
        <td><%= tl_trade.price %></td>
        <td><%= tl_trade.trade_time %></td>
        <td><%= tl_trade.pos_ind %></td>
        <td><%= tl_trade.shop_ind %></td>
        <td><%= tl_trade.trade_ind %></td>
        <td><%= link_to 'Show', tl_trade %></td>
        <td><%= link_to 'Edit', edit_tl_trade_path(tl_trade) %></td>
        <td><%= link_to 'Destroy', tl_trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= render "layouts/bus_navbar_top" %>
<div class="container-fluid m_login">
  <%= image_tag "login_bg.jpg", class: "login_bg", alt: "" %>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-7 login_form">
        <div class="panel panel-default">
          <div class="row title h4">
            商户登录
          </div>
          <form class="form-horizontal">
            <div class="form-group">
              <label for="txtServiceNo" class="col-sm-2 control-label">服务号</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="txtServiceNo" placeholder="" />
              </div>
            </div>
            <div class="form-group">
              <label for="txtShopNo" class="col-sm-2 control-label">商户号</label>
              <div class="col-sm-10">
                <input type="test" class="form-control" id="txtShopNo" placeholder="" />
              </div>
            </div>
            <div class="form-group">
              <label for="password" class="col-sm-2 control-label">密&nbsp;&nbsp;&nbsp;码</label>
              <div class="col-sm-10">
                <input type="password" class="form-control" id="password" placeholder="" />
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                  <label>
                    <input type="checkbox"> 记住用户名
                  </label>
                  <label class="pull-right">忘记密码？</label>
                </div>
              </div>
            </div>
            <div class="form-group text-center">
              <button type="submit" class="btn btn-warning">登录</button>
            </div>
            <div class="form-group join-apply">
              <%= link_to "合作意向申请>>" %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/bus_footer" %>
<script type="text/javascript">
  $(".m_login").height($(document).height() - $(".navbar-default").outerHeight() - $(".bus-footer").outerHeight());
  $(".login_bg").height($(document).height() - $(".navbar-default").outerHeight() - $(".bus-footer").outerHeight());
</script>
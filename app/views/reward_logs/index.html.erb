<h1>Listing reward_logs</h1>

<table>
  <thead>
    <tr>
      <th>Reward</th>
      <th>Customer</th>
      <th>Merchant</th>
      <th>Amount</th>
      <th>Float</th>
      <th>Verify code</th>
      <th>Verify time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reward_logs.each do |reward_log| %>
      <tr>
        <td><%= reward_log.reward %></td>
        <td><%= reward_log.customer %></td>
        <td><%= reward_log.merchant %></td>
        <td><%= reward_log.amount %></td>
        <td><%= reward_log.float %></td>
        <td><%= reward_log.verify_code %></td>
        <td><%= reward_log.verify_time %></td>
        <td><%= link_to 'Show', reward_log %></td>
        <td><%= link_to 'Edit', edit_reward_log_path(reward_log) %></td>
        <td><%= link_to 'Destroy', reward_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward log', new_reward_log_path %>
